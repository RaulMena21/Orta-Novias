# Dockerfile optimizado para producci贸n
FROM python:3.11-slim-bullseye

# Metadatos
LABEL maintainer="Orta Novias <admin@ortanovias.com>"
LABEL version="1.0.0"
LABEL description="Orta Novias - Sistema de gesti贸n de citas"

# Variables de entorno para optimizaci贸n
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONHASHSEED=random \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=100

# Crear usuario no-root para seguridad
RUN groupadd -r ortauser && useradd -r -g ortauser ortauser

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    postgresql-client \
    gettext \
    build-essential \
    libpq-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Crear directorios
WORKDIR /app
RUN mkdir -p /app/static /app/media /app/logs \
    && chown -R ortauser:ortauser /app

# Instalar dependencias de Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c贸digo fuente
COPY . .
RUN chown -R ortauser:ortauser /app

# Crear script de inicio
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh && chown ortauser:ortauser /entrypoint.sh

# Cambiar a usuario no-root
USER ortauser

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/api/health/ || exit 1

# Exponer puerto
EXPOSE 8000

# Comando de inicio
ENTRYPOINT ["/entrypoint.sh"]
