# Variables de entorno - TEMPLATE PARA PRODUCCIÓN
# Copiar a .env y configurar con valores reales

# Database
POSTGRES_DB=ortanovias_prod
POSTGRES_USER=ortauser_prod
POSTGRES_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Django
DJANGO_SECRET_KEY=GENERAR_NUEVO_SECRET_KEY_SEGURO
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-de-aplicacion
DEFAULT_FROM_EMAIL=noreply@ortanovias.com

# Twilio configuration for WhatsApp
TWILIO_ACCOUNT_SID=tu-account-sid-real
TWILIO_AUTH_TOKEN=tu-auth-token-real
TWILIO_WHATSAPP_FROM=whatsapp:+tu-numero-twilio

# Media files
MEDIA_URL=/media/
STATIC_URL=/static/

# SSL/HTTPS
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
